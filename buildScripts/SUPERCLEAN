#!/bin/bash 

make distclean

# remove previously generated stuff
rm -rf Makefile Makefile.in src/Makefile src/Makefile.in  stamp-h1 po/POTFILES po/Makefile po/Makefile.i* po/stamp-it sql/Makefile sql/Makefile.in config.log config.status configure aclocal.m4 autom4te.cache intltool-*.in mkinstalldirs TODO.tasks config.h.in depcomp install-sh missing config.h .tm_project2.cache

# Create things the automake needs
ln -s /usr/share/automake-1.11/depcomp depcomp
ln -s /usr/share/automake-1.11/install-sh install-sh
ln -s /usr/share/automake-1.11/missing missing

# rebuild all the stuff we just deleted.
./autogen.sh

# Get rid of stuff we don't want to distro
#rm -rf Makefile.in src/Makefile.in sql/Makefile.in po/Makefile.in.in config.h.in
rm -rf aclocal.m4 autom4te.cache intltool-*.in mkinstalldirs TODO.tasks .tm_project2.cache
rm -rf stamp-h1 po/stamp-it
rm -rf depcomp 

# Remove 'this computer' specific generated files.
rm -rf Makefile src/Makefile sql/Makefile po/Makefile config.h
rm -rf config.log config.status
